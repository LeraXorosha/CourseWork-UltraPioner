<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UltraPioner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/player.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UltraPioner.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> </div>
        <div class="header_img"> <img src="~/UP.png" alt="" id="header-images"> </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo">
                    <img src="~/logo-sib.png" alt="logo-sib" id="sib-images">
                    <span class="nav_logo-name">СИБИРЬ</span>
                </a>

                <div class="nav_list">


                    <a href="#" class="nav_link"> 
                        <i class='bx bxs-home-heart icon'></i>
                        <span class="nav_name" id="nav-name">Главная</span>
                    </a>

                    <a href="#" class="nav_link">
                        <i class='bx bx-male-female icon'></i>
                        <span class="nav_name" id="nav-name">Все пользователи</span>
                    </a>

                    <a href="#" class="nav_link">
                        <i class='bx bxs-game icon'></i>
                        <span class="nav_name">Игроки</span>
                    </a>

                    <a href="#" class="nav_link">
                        <i class='bx bx-calendar icon'></i>
                        <span class="nav_name">Расписание</span>
                    </a>
                </div>
            </div>

            <a asp-action="Logout" asp-controller="Account" class="nav_link">
                <i class='bx bx-log-out icon'></i>
                <span class="nav_name">SignOut</span>
            </a>
        </nav>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - UltraPioner - <a asp-area="" asp-controller="Player"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/player.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
